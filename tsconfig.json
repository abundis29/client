{
  "compilerOptions": {
    "rootDirs": ["./src/components", "./src"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "checkJs": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["src/*"],
      "@v1": ["components/v1"],
      "@v1/*": ["components/v1/*"],
      "@v2": ["components/v2"],
      "@v2/*": ["components/v2/*"],
    }
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}